//待ち時間の設定
to handle WaitTime
	//waitで待ち時間をテスト 
	set before to now
	wait 5s
	set after to now
	set wait_time to after-before
	log "wait_time:"&wait_time
	
	If wait_time>=5 and wait_time<6 then
		result_hdl.Result_Pass "waitコマンドで5秒の待ち時間を設定する","PC"
	Else
		result_hdl.Result_Fail "waitコマンドで5秒の待ち時間を設定する","PC"
	End if
	wait 2
end WaitTime


