//drag_drop
to handle drag_drop_confirm
	try
		drag {webLinkText: "ホーム"}
		drop {webLinkText: "会員登録"}
		wait 2s
		waitfor 10s,image:"webdriver_drag_drop"
		result_hdl.Result_Pass "drag(WebDriver)コマンドでページ上のカーソルを要素が表示される位置に移動して、dropコマンドでカーソルを放す","PC"
	catch
		result_hdl.Result_Fail "drag(WebDriver)コマンドでページ上のカーソルを要素が表示される位置に移動して、dropコマンドでカーソルを放す","PC"
	end try
end drag_drop_confirm

//moveto
to handle moveto_confirm
	try
		set elementsList to FindElements(webTagName:"p")
		repeat with each element in elementsList
			moveTo element
		end repeat
		waitfor 10s,image:"tagname_p"
		result_hdl.Result_Pass "moveto(WebDriver)コマンドで指定要素の位置に移動する","PC"
	catch
		result_hdl.Result_Fail "moveto(WebDriver)コマンドで指定要素の位置に移動する","PC"
	end try
end moveto_confirm

//webdisconnect
to handle webdisconnect_confirm
	try
		WebDisconnect "Chrome_WebDriver"
		wait 2s
		waitfor 10s,image:"Chrome"
		result_hdl.Result_Pass "webdisconnectコマンドで接続を切断する","PC"
	catch
		result_hdl.Result_Fail "webdisconnectコマンドで接続を切断する","PC"
	end try
end webdisconnect_confirm
