//webconnectコマンドで接続する
to handle webconnect_confirm
	try
		WebConnect name: "Chrome_WebDriver",url: "https://hotel.testplanisphere.dev/ja/"
		wait 2s
		waitfor 10s,image:"webdriver_test_page"
		result_hdl.Result_Pass "webconnectコマンドでwebdriver接続","PC"
	catch
		result_hdl.Result_Fail "webconnectコマンドでwebdriver接続","PC"
	end try
end webconnect_confirm

to handle webdriver_windowsize
	//画面最大化
	try
		waitfor 10,image:"browser_size_small"
		set the WebDriver's windowsize to "max"
		wait 2s
		waitfor 10s,image:"browser_size_max"
		result_hdl.Result_Pass "windowsizeコマンドでブラウザのウィンドウズを変更する","PC"
		catch
		result_hdl.Result_Fail "windowsizeコマンドでブラウザのウィンドウズを変更する","PC"
	end try
end webdriver_windowsize

